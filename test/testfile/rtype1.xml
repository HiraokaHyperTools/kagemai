<?xml version="1.0" encoding="UTF-8"?>

<!-- name が省略されると name == id とする？ -->
<ReportType>
  <string id="email" name="送信者">
    送信者のメールアドレスを入力してください。
  </string>

  <string id="title" name="タイトル">
    この報告の題名を、簡潔・明瞭に書いてください。    
  </string>

  <select id="status" name="状況" report_attr="true">
    <choice id="新規" default="yes" />
    <choice id="未解決" />
    <choice id="解決済み" />
    <choice id="完了" />
  </select>

  <select id="priority" name="優先度" report_attr="true">
    <choice id="緊急" default="yes" />
    <choice id="高" />
    <choice id="普通" />
    <choice id="低" />
  </select>

  <multiselect id="category" name="カテゴリ" report_attr="true">
    <choice id="c1" default="yes" />
    <choice id="c2" />
    <choice id="c3" />
  </multiselect>

  <text id="body" name="内容">
    簡潔・明瞭にどうぞ。余分な引用や挨拶はいりません。
  </text>

</ReportType>
